<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="pageViewState"
            type="com.example.learnandroidproject.ui.welcome.createAccountFragment.CreateAccountPageViewState" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:context=".ui.welcome.postTestFragment.PostTestFragment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kayıt Ol"
            android:textSize="20sp"
            android:fontFamily="@font/gotham_bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="150dp"/>

        <EditText
            android:id="@+id/userName"
            android:layout_width="300dp"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:maxLength="15"
            android:hint="Kullanıcı Adı"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="300dp"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:maxLength="30"
            android:hint="Email"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="300dp"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:maxLength="15"
            android:hint="Şifre"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/send_Button">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profili Doldurmaya Başla!"
                android:textColor="@color/white"
                android:padding="10dp"
                android:textSize="15sp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>