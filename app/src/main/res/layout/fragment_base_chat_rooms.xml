<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.welcome.profileAdding.ProfileAddingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tabInternet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genel"
            android:textSize="17sp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="40dp"
            android:fontFamily="@font/gotham_book"
            android:textColor="@color/register_title_color"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tabLocal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yerel"
            android:layout_marginTop="4dp"
            android:textSize="17sp"
            android:fontFamily="@font/gotham_book"
            android:textColor="@color/register_title_color"/>

    </LinearLayout>

    <View
        android:id="@+id/scrollLine"
        android:layout_width="58dp"
        android:layout_height="5dp"
        android:background="@drawable/tab_indicator"
        android:translationX="370px"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    </LinearLayout>
</layout>