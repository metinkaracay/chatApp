<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="pageViewState"
            type="com.example.learnandroidproject.ui.welcome.postTestFragment.PostPageViewState" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".ui.welcome.postTestFragment.PostTestFragment">

        <EditText
            android:id="@+id/title"
            android:layout_width="200dp"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content"
            android:hint="Title"/>
        <EditText
            android:id="@+id/description"
            android:layout_width="200dp"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content"
            android:hint="Description"/>
        <EditText
            android:id="@+id/thumbnail"
            android:layout_width="200dp"
            android:layout_marginBottom="70dp"
            android:layout_height="wrap_content"
            android:hint="Thumbnail"/>
        <EditText
            android:id="@+id/author"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Author"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/gray_hint_color">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GÃ¶nder"
                android:padding="10dp"
                android:textSize="15sp"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>